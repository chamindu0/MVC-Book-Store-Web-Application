@model BookStoreMVC.Models.Order
@{
    ViewBag.Title = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Order ID</dt>
        <dd>@Model.OrderID</dd>
        <dt>User ID</dt>
        <dd>@Model.UserID</dd>
        <dt>Order Date</dt>
        <dd>@Model.OrderDate</dd>
        <dt>Total Amount</dt>
        <dd>@Model.TotalAmount.ToString("C")</dd>
        <dt>Payment Status</dt>
        <dd>@Model.PaymentStatus</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "ListOrders", null, new { @class = "btn btn-default" })
    }
</div>
