@model BookStoreMVC.Models.Order
@{
    ViewBag.Title = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/order-confirmation.css" rel="stylesheet" />
}

<div class="order-confirmation-container">
    <div class="order-confirmation-box">
        <h2>Order Confirmation</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <p>Order ID: @Model.OrderID</p>
        <p>Total Amount: @Model.TotalAmount.ToString("C")</p>
        <p>Payment Status: @Model.PaymentStatus</p>

        <h3>Order Items</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Book.Title</td>
                        <td>@item.Book.Author</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Price * item.Quantity)$</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
